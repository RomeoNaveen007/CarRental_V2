@model IEnumerable<Pick_To_Ride.Models.Entities.Payment>
@{
    ViewData["Title"] = "Payments";
}
<link rel="stylesheet" href="~/css/payment.css" />

<div class="payment-list">
    <h2>All Payments</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <table class="table-custom">
        <thead>
            <tr>
                <th>Payment ID</th>
                <th>Booking</th>
                <th>Amount</th>
                <th>Method</th>
                <th>Status</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.PaymentId</td>
                    <td>@p.BookingId</td>
                    <td>@p.Amount.ToString("C")</td>
                    <td>@p.Method</td>
                    <td>@p.Status</td>
                    <td>@p.PaymentDate?.ToString("g")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@p.PaymentId" class="btn-link">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
