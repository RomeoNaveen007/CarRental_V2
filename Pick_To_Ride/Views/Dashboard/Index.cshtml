@model dynamic
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-4">Admin Dashboard</h2>
    <div class="row g-3">

        <!-- Bookings -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5>Total Bookings</h5>
                    <h2>@(Model?.TotalBookings ?? 0)</h2>
                </div>
            </div>
        </div>

        <!-- Revenue -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5>Total Revenue</h5>
                    <h2>LKR @(Model?.TotalRevenue ?? 0)</h2>
                </div>
            </div>
        </div>

        <!-- Active Cars -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5>Active Cars</h5>
                    <h2>@(Model?.ActiveCars ?? 0)</h2>
                </div>
            </div>
        </div>

        <!-- Drivers -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5>Drivers On Duty</h5>
                    <h2>@(Model?.DriversOnDuty ?? 0)</h2>
                </div>
            </div>
        </div>

        <!-- Booking Chart -->
        <div class="row mt-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5>Bookings (Last 7 days)</h5>
                    <canvas id="bookingsChart" height="100"></canvas>
                </div>
            </div>
        </div>


    </div>
</div>


@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('bookingsChart').getContext('2d');
        const labels = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Labels));
        const dataPoints = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.BookingsPerDay));
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Bookings',
                    data: dataPoints,
                    fill: true,
                    tension: 0.3,
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: { beginAtZero: true, precision:0 }
                }
            }
        
        });
    </script>
}


