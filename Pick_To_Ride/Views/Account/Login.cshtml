@model Pick_To_Ride.ViewModels.LoginViewModel

@{
    Layout = null; //  we don't want the full sidebar/top navbar on login
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Car Rental</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>

        /* Fullscreen background with image */
        .login-body {
            background: url('../uploads/logos/Aicar.png') no-repeat center center;
            background-size: cover; /* Makes the image cover the whole screen */
            height: 100vh;
            margin: 0;
        }

        .login-card {
            max-width: 380px;
            width: 100%;
            background: rgba(28, 28, 30, 0.7); /* semi-transparent */
            border-radius: 1rem;
            color: #fff;
            backdrop-filter: blur(10px);
            padding: 2rem;
            transition: transform 0.5s ease, box-shadow 0.5s ease, border 0.5s ease; /* smooth hover transition */
        }

            /* Hover pop-up effect */
            .login-card:hover {
                transform: translateY(-10px) scale(1.05); /* move up & slightly enlarge */
                border: 1px solid #007bff; /* blue border */
                box-shadow: 0 30px 30px 20px rgba(0, 0, 255, 0.6); /* glowing shadow */
                backdrop-filter: blur(12px); /* stronger frosted effect */
            }


            /* Input styling */
            .login-card .form-control {
                background: #2c2c2e;
                border: 1px solid #444;
                color: #fff;
            }

                .login-card .form-control:focus {
                    border-color: #0d6efd;
                    box-shadow: 0 0 8px rgba(13, 110, 253, 0.4);
                }

            /* Primary button */
            .login-card .btn-primary {
                background: #0d6efd;
                border: none;
                font-weight: 600;
            }

                .login-card .btn-primary:hover {
                    background: #0b5ed7;
                }

        /* Validation errors */
        .text-danger {
            font-size: 0.9rem;
        }

    </style>
</head>
<body class="login-body d-flex align-items-center justify-content-center">

    <div class="login-card card shadow-lg p-4">
        <div class="text-center mb-3">
            <h2 class="text-light">🚗 Car Rental</h2>
            <p class="text-muted">Admin Login</p>
        </div>

        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="UserName" class="form-label text-light"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label text-light"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
