@model IEnumerable<Pick_To_Ride.Models.Entities.Car>
@{
    ViewData["Title"] = "Car Catalog";
}

<div class="container py-4">
    <h2>Cars</h2>
    <div class="row">
        @foreach (var car in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <img src="@(car.ImageURL ?? "/images/car-placeholder.png")" class="card-img-top" alt="@car.CarName" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@car.CarName</h5>
                        <p class="card-text">Seats: @car.Seats | Transmission: @car.Transmission</p>
                        <p class="card-text">Daily: @car.DailyRate.ToString("C")</p>
                        <div class="mt-auto">
                            <a asp-controller="Booking" asp-action="Create" asp-route-carId="@car.CarId" asp-route-carName="@car.CarName" class="btn btn-primary">Book Now</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
