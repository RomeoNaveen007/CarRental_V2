@model IEnumerable<Pick_To_Ride.Models.Entities.Staff>
@{
    ViewData["Title"] = ViewData["Title"] ?? "Staff Management";
    string role = ViewData["Role"]?.ToString() ?? "Staff";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <div>
            @if (role == "Staff")
            {
                <a class="btn btn-success" asp-action="Create" asp-route-role="Staff">+ Add Staff</a>
            }
            else if (role == "Driver")
            {
                <a class="btn btn-primary" asp-action="Create" asp-route-role="Driver">+ Add Driver</a>
            }
            else
            {
                <!-- Optional: show both if no filter -->
                <a class="btn btn-success me-2" asp-action="Create" asp-route-role="Staff">+ Add Staff</a>
                <a class="btn btn-primary" asp-action="Create" asp-route-role="Driver">+ Add Driver</a>
            }
        </div>
    </div>

    <form method="get" class="mb-3">
        <input type="hidden" name="role" value="@role" />
        <div class="input-group">
            <input type="text" name="search" value="@ViewData["Search"]" class="form-control" placeholder="Search by name, email, phone..." />
            <button class="btn btn-outline-secondary" type="submit">Search</button>
        </div>
    </form>

    <table class="table table-striped table-hover shadow-sm rounded-4">
        <thead class="table-dark">
            <tr>
                <th>Avatar</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
                <th>Availability</th>
                <th>Salary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var staff in Model)
            {
                <tr>
                    <td>
                        <img src="@(string.IsNullOrEmpty(staff.User.ProfileImage) ? "/images/default-avatar.png" : staff.User.ProfileImage)"
                             class="rounded-circle" style="width:48px;height:48px;object-fit:cover;" />
                    </td>
                    <td>@staff.User.FullName</td>
                    <td>@staff.User.Email</td>
                    <td>@staff.User.PhoneNumber</td>
                    <td>@staff.User.Role</td>
                    <td>@staff.Availability</td>
                    <td>@staff.Salary.ToString("C")</td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@staff.StaffId">Edit</a>
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@staff.StaffId">View</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@staff.StaffId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>