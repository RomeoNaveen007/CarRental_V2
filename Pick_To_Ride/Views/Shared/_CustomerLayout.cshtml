@{
    ViewData["Title"] = "Car Rental - Home";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}



<style>.card img {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
}
.card img:hover {
    transform: scale(1.05);
    box-shadow: 0px 8px 20px rgba(0,0,0,0.3);
}


    /* ----- FEATURES SECTION ----- */
.features {
    padding: 80px 0;
    text-align: center;
}
.feature-card {
    transition: transform 1s, box-shadow 0.5s;
    border-radius: 15px;
    padding: 40px 20px;
    box-shadow: 0 4px 15px rgba(0,0,0,5);
    background: #2C2A2A;
    margin:20px;
}
.feature-card:hover {
    transform: translateY(-10px);
    box-shadow:0 8px 25px rgba(0,0,0,0.2);
}
.feature-card i {
    font-size:5rem;
    color: #FFFFFF;
    margin-bottom:15px;
}.feature-card h4 {
    color: #FFFFFF;
    
}.feature-card p {
    color: #FFFFFF;
  
}

@@keyframes fillStars {
    0% { width:0%; }
    100% { width:100%; }
}

    /* Keyframes for fill animation */
    @@keyframes starFill {
        0% {
            opacity: 0;
            transform: scale(0);
        }

        50% {
            opacity: 1;
            transform: scale(1.4);
        }

        100% {
            opacity: 1;
            transform: scale(1);
        }
    }
</style>



<div class="container-fluid">
  <div class="row">

        <div class="main-content">
            <div class="d-flex flex-column align-items-center text-center mb-5">
                <h2> Welcome Customer!</h2>
            </div>
            <div class="hero-section">
                <img src="/uploads/profiles/dash4.webp" alt="Rental Car" class="hero-img" />
            </div>

            <div class="d-flex flex-column align-items-center text-center mb-5">
                <h3 class="mb-3">Why Choose CarRental?</h3>
                <p class="text-muted px-3">
                    Discover a wide range of vehicles tailored to your needs. Whether it's a luxury sedan or a budget-friendly hatchback, we’ve got you covered.
                </p>
                <ul class="list-unstyled">
                    <li><i class="fas fa-check-circle text-success me-2"></i> Affordable rates</li>
                    <li><i class="fas fa-check-circle text-success me-2"></i> Easy online booking</li>
                    <li><i class="fas fa-check-circle text-success me-2"></i> 24/7 customer support</li>
                </ul>


            </div>

            @RenderBody()
        </div>

