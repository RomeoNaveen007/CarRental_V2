@model Pick_To_Ride.Models.Entities.Car
@{
    ViewData["BodyClass"] = "page-car";
}

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 1rem;
        overflow: hidden;
        min-height: 400px;
    }

    .car-image {
        flex: 1 1 40%;
        max-width: 40%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(to bottom right, #f8f9fa, #e9ecef);
        padding: 1rem;
    }

        .car-image img {
            max-height: 300px;
            width: auto;
            border-radius: 0.75rem;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
            transition: transform 0.3s ease;
        }

            .car-image img:hover {
                transform: scale(1.05);
            }

    .car-details {
        flex: 1 1 60%;
        background-color: #ffffff;
        border-left: 1px solid #dee2e6;
        border-radius: 0 1rem 1rem 0;
    }

    .btn-gradient {
        background: linear-gradient(to right, #007bff, #6610f2);
        color: #fff;
        border: none;
        padding: 0.5rem 1.25rem;
        font-weight: 500;
        border-radius: 0.5rem;
        transition: background 0.3s ease;
    }

        .btn-gradient:hover {
            background: linear-gradient(to right, #0056b3, #520dc2);
            color: #fff;
        }

</style>

<div class="container my-5">
    <div class="glass-card d-flex flex-wrap shadow-lg">
        <div class="car-image flex-grow-1">
            <img src="@Model.ImageURL" alt="@Model.CarName" class="img-fluid rounded-start" />
        </div>
        <div class="car-details flex-grow-1 p-4">
            <h2 class="text-gradient mb-3">@Model.CarName</h2>
            <ul class="list-unstyled fs-5">
                <li><strong>Brand:</strong> @Model.Brand</li>
                <li><strong>Fuel:</strong> @Model.FuelType</li>
                <li><strong>Transmission:</strong> @Model.Transmission</li>
                <li><strong>Seats:</strong> @Model.Seats</li>
                <li><strong>Rate:</strong> LKR=@Model.DailyRate / day</li>
                <li><strong>Status:</strong> <span class="badge bg-@(Model.Status == "Available" ? "success" : "danger")">@Model.Status</span></li>
                <li><strong>Category:</strong> @Model.Category</li>
            </ul>
            <p class="mt-3 text-muted">@Model.Description</p>
            <a asp-action="Index" class="btn btn-outline-light mt-4">⬅ Back</a>
        </div>
    </div>
</div>