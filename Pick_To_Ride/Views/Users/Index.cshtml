@model IEnumerable<Pick_To_Ride.Models.Entities.User>

@{
    ViewData["Title"] = "Users";
    ViewData["BodyClass"] = "page-user";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Users</h2>
        <form class="d-flex" method="get" asp-action="Index">
            <input type="text" name="search" class="form-control me-2" placeholder="Search users..." value="@Context.Request.Query["search"]" />
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
        <a class="btn btn-success ms-2" asp-action="Create">+ Add User</a>
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Avatar</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr class="align-middle">
                    <td>
                        <img src="@(string.IsNullOrEmpty(u.ProfileImage) ? "/images/default-avatar.png" : u.ProfileImage)"
                             alt="avatar" class="rounded-circle" style="width:48px;height:48px;object-fit:cover;" />
                    </td>
                    <td>@u.FullName</td>
                    <td>@u.Email</td>
                    <td>@u.PhoneNumber</td>
                    <td>@u.Role</td>
                    <td>@(u.IsActive ? "Yes" : "No")</td>
                    <td>
                        <a class="btn btn-sm btn-outline-secondary me-1" asp-action="Details" asp-route-id="@u.UserId">View</a>
                        <a class="btn btn-sm btn-outline-primary me-1" asp-action="Edit" asp-route-id="@u.UserId">Edit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@u.UserId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
