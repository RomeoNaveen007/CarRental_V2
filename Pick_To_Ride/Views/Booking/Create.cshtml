@model Pick_To_Ride.ViewModels.BookingViewModel
@{
    ViewData["Title"] = "Create Booking";
}

<div class="container py-4">
    <h2>Create Booking</h2>

    <form asp-action="Create" method="post" class="shadow p-4 rounded bg-light">
        <input type="hidden" asp-for="CustomerId" />
        <input type="hidden" asp-for="CarId" />

        <div class="mb-3">
            <label class="form-label">Car</label>
            <input class="form-control" value="@Model.SelectedCarName" disabled />
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="StartDate" class="form-label"></label>
                <input asp-for="StartDate" class="form-control" type="date" min="@DateTime.UtcNow.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="EndDate" class="form-label"></label>
                <input asp-for="EndDate" class="form-control" type="date" min="@DateTime.UtcNow.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="DriverRequired" class="form-check-input" id="driverRequired" />
            <label asp-for="DriverRequired" class="form-check-label">Driver required?</label>
        </div>

        <div id="pickupDiv" class="mb-3" style="display:@(Model.DriverRequired ? "block" : "none")">
            <label asp-for="PickupLocation" class="form-label"></label>
            <input asp-for="PickupLocation" class="form-control" />
            <span asp-validation-for="PickupLocation" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Choose Driver (optional)</label>
            <select asp-for="DriverId" class="form-select">
                <option value="">-- Select driver (optional) --</option>
                @foreach (var d in Model.AvailableDrivers ?? Enumerable.Empty<Pick_To_Ride.Models.Entities.Staff>())
                {
                    <option value="@d.StaffId">@d.User?.FullName (@d.User?.UserName)</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="TotalAmount" class="form-label">Estimated Total (calculated on submit)</label>
            <input asp-for="TotalAmount" class="form-control" readonly />
        </div>

        <button type="submit" class="btn btn-success">Proceed to Payment</button>
    </form>
</div>

@section Scripts {
    <script>
        // toggle pickup input
        const chk = document.getElementById('driverRequired');
        const pickupDiv = document.getElementById('pickupDiv');
        chk.addEventListener('change', () => {
            pickupDiv.style.display = chk.checked ? 'block' : 'none';
        });
    </script>
}
