@model Pick_To_Ride.Models.Entities.Booking
@{
    ViewBag.Title = "Booking Success";
}

<div class="container py-4">
    <h2>Booking Confirmed</h2>
    <div class="card p-3">
        <h4>Booking Code: @Model.BookingCode</h4>
        <p><strong>Car:</strong> @Model.Car.CarName</p>
        <p><strong>Start:</strong> @Model.StartDate:yyyy-MM-dd</p>
        <p><strong>End:</strong> @Model.EndDate:yyyy-MM-dd</p>
        <p><strong>Pickup Location:</strong> @(Model.PickupLocation ?? "N/A")</p>
        <p><strong>Amount Paid:</strong> LKR @Model.TotalAmount</p>
        <p><strong>Status:</strong> @Model.Status</p>
    </div>
</div>
