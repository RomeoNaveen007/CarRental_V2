@model IEnumerable<Pick_To_Ride.Models.Entities.Car>

@{
    ViewData["Title"] = "Car Catalog";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/custom.css" />

<div class="container py-4">
    <h2 class="mb-3">Available Cars</h2>

    <div class="row g-3">
        @if (!Model?.Any() ?? true)
        {
            <div class="col-12">
                <div class="alert alert-info">No cars available right now.</div>
            </div>
        }
        else
        {
            @foreach (var car in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="card car-card h-100 shadow-sm">
                        <img src="@car.ImageURL" class="card-img-top" alt="@car.CarName"
                             style="height:160px;object-fit:cover;" />

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-1">@car.CarName</h5>
                            <small class="text-muted">@car.Brand • @car.Category</small>
                            <p class="mt-2 mb-1 small">
                                @(car.Description?.Substring(0, Math.Min(80, (car.Description ?? "").Length)))
                            </p>

                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>LKR @car.DailyRate</strong><br />
                                    <span class="badge bg-@(car.Status == "Available" ? "success" : "secondary")">
                                        @car.Status
                                    </span>
                                </div>

                                <div class="btn-group" role="group">
                                    <a asp-controller="Booking" asp-action="_CarDetailsPartial" asp-route-id="@car.CarId"
                                       class="btn btn-sm btn-outline-primary">Details</a>
                                    <a asp-controller="Booking" asp-action="Create" asp-route-carId="@car.CarId"
                                   class="btn btn-primary"
                                   onclick="if (!@User.Identity.IsAuthenticated) { alert('Please login to continue booking.'); window.location.href='/Account/Login'; return false; }">
                                   Book Now
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
