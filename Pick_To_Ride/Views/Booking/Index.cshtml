@model IEnumerable<Pick_To_Ride.Models.Entities.Booking>

<div class="container mt-4">
    <h2 class="mb-3">Bookings</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Booking Code</th>
                <th>Car</th>
                <th>Customer</th>
                <th>Start</th>
                <th>End</th>
                <th>Status</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.BookingCode</td>
                    <td>@booking.Car.CarName</td>
                    <td>@booking.Customer.FullName</td>
                    <td>@booking.StartDate.ToShortDateString()</td>
                    <td>@booking.EndDate.ToShortDateString()</td>
                    <td>@booking.Status</td>
                    <td>@booking.TotalAmount</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@booking.BookingId" class="btn btn-sm btn-primary">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
