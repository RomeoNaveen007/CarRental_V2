@using Pick_To_Ride.Models.Entities

@model IEnumerable<Pick_To_Ride.Models.Entities.Booking>
@{
    ViewData["Title"] = "Booking Management";
}

<style>
    .table-custom th {
        background-color: #0d6efd;
        color: white;
        text-align: center;
    }

    .table-custom td {
        vertical-align: middle;
    }

    .action-btns a {
        margin-right: 5px;
    }
</style>

<div class="container py-4">
    <h2 class="mb-3 text-primary d-flex justify-content-between align-items-center">
        @ViewData["Title"]
        <a asp-controller= "Booking" asp-action="Catalog" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> New Booking
        </a>

    </h2>

    <div class="card shadow-lg rounded-3">
        <div class="card-body">
            <table class="table table-bordered table-hover table-striped table-custom">
                <thead>
                    <tr>
                        <th>Booking Code</th>
                        <th>Car</th>
                        <th>Customer</th>
                        <th>Driver</th>
                        <th>Start</th>
                        <th>End</th>
                        <th>Total (LKR)</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model)
                    {
                        <tr>
                            <td>@b.BookingCode</td>
                            <td>@b.Car?.CarName</td>
                            <td>@b.Customer?.FullName</td>
                            <td>@(b.DriverRequired? b.Driver?.User?.FullName : "No Driver")</td>
                            <td>@b.StartDate.ToString("dd-MMM-yyyy")</td>
                            <td>@b.EndDate.ToString("dd-MMM-yyyy")</td>
                            <td>@b.TotalAmount.ToString("N2")</td>
                            <td>
                                <span class="badge
                                      @(b.Status == BookingStatus.Pending ? "bg-warning" :
                                                                        b.Status == BookingStatus.Booked ? "bg-success" :
                                                                        b.Status == BookingStatus.Cancelled ? "bg-danger" : "bg-secondary")

                            </span>
                        </td>
                        <td class="text-center action-btns">
                            <a asp-action="Edit" asp-route-id="@b.BookingId" class="btn btn-sm btn-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@b.BookingId" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                                        }
                </tbody>
            </table>
        </div>
    </div>
</div>
