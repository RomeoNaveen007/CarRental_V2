@model Pick_To_Ride.Models.Entities.Booking
@{
    ViewData["Title"] = "Delete Booking";
}

<div class="container py-4">
    <h2 class="text-danger mb-3"><i class="bi bi-exclamation-triangle"></i> Confirm Delete</h2>

    <div class="card shadow-lg border-danger p-4">
        <p><strong>Booking Code:</strong> @Model.BookingCode</p>
        <p><strong>Car:</strong> @Model.Car?.CarName</p>
        <p><strong>Customer:</strong> @Model.Customer?.FullName</p>
        <p><strong>Total Amount:</strong> LKR @Model.TotalAmount.ToString("N2")</p>
        <p><strong>Status:</strong> @Model.Status</p>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="BookingId" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Yes, Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </form>
    </div>
</div>
