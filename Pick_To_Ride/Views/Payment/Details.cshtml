@model Pick_To_Ride.Models.Entities.Payment
@{
    ViewData["Title"] = "Payment Details";
}
<link rel="stylesheet" href="~/css/payment.css" />

<div class="payment-details">
    <h2>Payment Details</h2>
    <dl>
        <dt>Payment ID</dt>
        <dd>@Model.PaymentId</dd>

        <dt>Booking</dt>
        <dd>@Model.BookingId</dd>

        <dt>Amount</dt>
        <dd>@Model.Amount.ToString("C")</dd>

        <dt>Method</dt>
        <dd>@Model.Method</dd>

        <dt>Status</dt>
        <dd>@Model.Status</dd>

        <dt>Date</dt>
        <dd>@Model.PaymentDate?.ToString("f")</dd>
    </dl>

    <a asp-action="Index" class="btn-back">Back to Payments</a>
</div>
