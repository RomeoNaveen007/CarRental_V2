@model IEnumerable<Pick_To_Ride.ViewModels.AuditLogViewModel>

@{
    ViewData["Title"] = "Audit Logs";
}

<div class="container py-4">
    <h2 class="mb-4">Audit Logs</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Action</th>
                <th>Entity</th>
                <th>Entity ID</th>
                <th>Performed By</th>
                <th>Timestamp</th>
                <th>Details</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Action</td>
                <td>@item.EntityName</td>
                <td>@item.EntityId</td>
                <td>@item.PerformedBy</td>
                <td>@item.Timestamp.ToLocalTime().ToString("g")</td>
                <td>@item.Details</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.AuditLogId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.AuditLogId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.AuditLogId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
