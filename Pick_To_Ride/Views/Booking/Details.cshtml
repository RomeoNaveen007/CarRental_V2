@model Pick_To_Ride.Models.Entities.Booking
@{
    ViewData["Title"] = "Booking Details";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Booking Code: @Model.BookingCode</h5>
        <p><strong>Car:</strong> @Model.Car?.CarName</p>
        <p><strong>Driver:</strong> @Model.Driver?.User?.FullName ?? "N/A"</p>
        <p><strong>Start Date:</strong> @Model.StartDate:yyyy-MM-dd</p>
        <p><strong>End Date:</strong> @Model.EndDate:yyyy-MM-dd</p>
        <p><strong>Pickup Location:</strong> @Model.PickupLocation ?? "N/A"</p>
        <p><strong>Status:</strong> @Model.Status</p>
        <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
        <p><strong>Driver Required:</strong> @(Model.DriverRequired ? "Yes" : "No")</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
@if (Model.Status != Pick_To_Ride.Models.Entities.BookingStatus.Cancelled)
{
    <a asp-action="Edit" asp-route-id="@Model.BookingId" class="btn btn-primary mt-3">Edit</a>
    <a asp-action="Cancel" asp-route-id="@Model.BookingId" class="btn btn-danger mt-3">Cancel</a>
}
