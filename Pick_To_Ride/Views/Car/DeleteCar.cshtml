@model Pick_To_Ride.Models.Entities.Car
@{
    ViewData["BodyClass"] = "page-car";
}

<div class="container mt-5">
    <div class="alert alert-danger shadow-lg">
        <h4>⚠️ Are you sure you want to delete this car?</h4>
        <p><b>@Model.CarName</b> - @Model.Brand</p>

        <form asp-action="DeleteCar" method="post">
            <input type="hidden" asp-for="CarId" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="GetAllCars" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
