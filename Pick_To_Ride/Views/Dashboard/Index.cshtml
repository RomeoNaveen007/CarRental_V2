@{
    Layout = "_Layout";
    var model = (dynamic)Model;
}

<div class="container py-4">
    <div class="row g-3">
        <div class="col-md-3">
            <div class="card p-3">
                <h6>Total Bookings</h6>
                <h3>@model?.TotalBookings ?? 0</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3">
                <h6>Total Revenue (LKR)</h6>
                <h3>@String.Format("{0:N0}", model?.TotalRevenue ?? 0)</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3">
                <h6>Active Cars</h6>
                <h3>@model?.ActiveCars ?? 0</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3">
                <h6>Drivers On Duty</h6>
                <h3>@model?.DriversOnDuty ?? 0</h3>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card p-3">
                <h5>Bookings (Last 7 days)</h5>
                <canvas id="bookingsChart" height="100"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('bookingsChart').getContext('2d');
        const labels = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Labels));
        const dataPoints = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.BookingsPerDay));
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Bookings',
                    data: dataPoints,
                    fill: true,
                    tension: 0.3,
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: { beginAtZero: true, precision:0 }
                }
            }
        });
    </script>
}
