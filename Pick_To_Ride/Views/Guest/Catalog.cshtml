@model IEnumerable<Pick_To_Ride.Models.Entities.Car>

@{
    Layout = "_GuestLayout";
    ViewData["Title"] = "Car Catalog";
}

<link rel="stylesheet" href="~/css/custom.css" />
<!-- Custom CSS -->
<style>
    .card img {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

        .card img:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }

    .card-body {
        display: flex;
        flex-direction: column;
    }

    .btn-group .btn {
        min-width: 70px;
    }
</style>


<div class="container py-4">
    <h2 class="mb-4 text-center">Available Cars</h2>

    <div class="row g-4">
        @foreach (var car in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <img src="@car.ImageURL" class="card-img-top" alt="@car.CarName"
                         style="height:180px; object-fit:cover;" />

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@car.CarName</h5>
                        <p class="text-muted mb-1">@car.Brand • @car.Category</p>
                        <p class="small mb-2">
                            @(car.Description?.Length > 80 ? car.Description.Substring(0, 80) + "..." : car.Description)
                        </p>

                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <div>
                                <strong>LKR @car.DailyRate</strong><br />
                                <span class="badge bg-@(car.Status == "Available" ? "success" : "secondary")">
                                    @car.Status
                                </span>
                            </div>

                            <div class="btn-group">
                                <a asp-controller="Guest" asp-action="Details" asp-route-id="@car.CarId"
                                   class="btn btn-outline-secondary btn-sm">View</a>
                                <a asp-controller="Account" asp-action="Register"
                                   class="btn btn-primary btn-sm">Book Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

