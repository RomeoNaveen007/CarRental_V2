@model Pick_To_Ride.Models.Entities.Staff

@{
    ViewData["Title"] = "Staff Details";
}

<div class="container py-4">
    <div class="card shadow-lg p-4 mx-auto" style="max-width:500px; backdrop-filter: blur(8px); background: rgba(255,255,255,0.2);">
        <h3 class="text-center mb-3">Staff Details</h3>
        <div class="text-center mb-3">
            <img src="@(string.IsNullOrEmpty(Model.User.ProfileImage) ? "/images/default-avatar.png" : Model.User.ProfileImage)"
                 class="rounded-circle" style="width:100px;height:100px;object-fit:cover;">
        </div>

        <p><strong>Name:</strong> @Model.User.FullName</p>
        <p><strong>Email:</strong> @Model.User.Email</p>
        <p><strong>Role:</strong> @Model.User.Role</p>
        <p><strong>NIC:</strong> @Model.User.NIC</p>
        <p><strong>Licence:</strong> @(string.IsNullOrEmpty(Model.User.LicenceNumber) ? "-" : Model.User.LicenceNumber)</p>
        <p><strong>Phone:</strong> @(string.IsNullOrEmpty(Model.User.PhoneNumber) ? "-" : Model.User.PhoneNumber)</p>
        <p><strong>Availability:</strong> @Model.Availability</p>
        <p><strong>Salary:</strong> @Model.Salary.ToString("C")</p>
        <p><strong>Address:</strong> @(string.IsNullOrEmpty(Model.User.Address) ? "-" : Model.User.Address)</p>
        <p><strong>City:</strong> @(string.IsNullOrEmpty(Model.User.City) ? "-" : Model.User.City)</p>

        <div class="text-center mt-3">
            <a asp-action="Edit" asp-route-id="@Model.StaffId" class="btn btn-primary me-2">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>
    </div>
</div>
