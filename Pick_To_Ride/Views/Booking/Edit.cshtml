@model Pick_To_Ride.ViewModels.BookingViewModel
@{
    ViewData["Title"] = "Edit Booking";
}

<div class="container py-4">
    <h2 class="mb-3 text-primary">@ViewData["Title"]</h2>

    <div class="card shadow-lg rounded-3 p-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="BookingId" />

            <div class="mb-3">
                <label asp-for="CarId" class="form-label fw-bold"></label>
                <select asp-for="CarId" asp-items="@(new SelectList(Model.AvailableCars, "CarId", "CarName", Model.CarId))" class="form-select"></select>
            </div>

            <div class="mb-3">
                <label asp-for="DriverId" class="form-label fw-bold"></label>
                <select asp-for="DriverId" asp-items="@(new SelectList(Model.AvailableDrivers, "StaffId", "User.FullName", Model.DriverId))" class="form-select">
                    <option value="">-- No Driver --</option>
                </select>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="StartDate" class="form-label fw-bold"></label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="EndDate" class="form-label fw-bold"></label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="PickupLocation" class="form-label fw-bold"></label>
                <input asp-for="PickupLocation" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="TotalAmount" class="form-label fw-bold"></label>
                <input asp-for="TotalAmount" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label fw-bold"></label>
                <select asp-for="Status" class="form-select">
                    <option>Pending</option>
                    <option>Confirmed</option>
                    <option>Cancelled</option>
                </select>
            </div>

            <button type="submit" class="btn btn-success"><i class="bi bi-save"></i> Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back</a>
        </form>
    </div>
</div>
