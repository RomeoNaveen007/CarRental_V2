@model Pick_To_Ride.ViewModels.CarViewModel
@{
    ViewData["Title"] = "Add New Car";
    ViewData["BodyClass"] = "page-car";
}

<!-- Add Car Form -->
<div class="container py-5 d-flex justify-content-center">
    <div class="card shadow-lg p-4 bg-light w-100" style="max-width: 900px;">
        <h2 class="text-center text-primary mb-4">➕ Add New Car</h2>

        <form asp-action="AddCar" method="post" enctype="multipart/form-data">
            <div class="row g-3">
                <!-- Car Name -->
                <div class="col-md-6">
                    <label asp-for="CarName" class="form-label fw-bold"></label>
                    <input asp-for="CarName" class="form-control" />
                    <span asp-validation-for="CarName" class="text-danger"></span>
                </div>

                <!-- Brand (Select2 Combo Box) -->
                <div class="col-md-6">
                    <label asp-for="Brand" class="form-label fw-bold"></label>
                    <select asp-for="Brand" class="form-select select2">
                        <option value="">-- Select or type brand --</option>
                        <option>Toyota</option>
                        <option>Honda</option>
                        <option>BMW</option>
                        <option>Mercedes</option>
                        <option>Ford</option>
                    </select>
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>

                <!-- Registration Number -->
                <div class="col-md-6">
                    <label asp-for="RegistrationNumber" class="form-label fw-bold"></label>
                    <input asp-for="RegistrationNumber" class="form-control" placeholder="WP-1234" />
                    <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                </div>

                <!-- Fuel Type (Select2 Combo Box) -->
                <div class="col-md-6">
                    <label asp-for="FuelType" class="form-label fw-bold"></label>
                    <select asp-for="FuelType" class="form-select select2">
                        <option value="">-- Select or type fuel type --</option>
                        <option>Petrol</option>
                        <option>Diesel</option>
                        <option>Electric</option>
                        <option>Hybrid</option>
                    </select>
                    <span asp-validation-for="FuelType" class="text-danger"></span>
                </div>

                <!-- Transmission (Select2 Combo Box) -->
                <div class="col-md-6">
                    <label asp-for="Transmission" class="form-label fw-bold"></label>
                    <select asp-for="Transmission" class="form-select select2">
                        <option value="">-- Select or type transmission --</option>
                        <option>Manual</option>
                        <option>Automatic</option>
                        <option>Semi-Automatic</option>
                    </select>
                    <span asp-validation-for="Transmission" class="text-danger"></span>
                </div>

                <!-- Seats -->
                <div class="col-md-6">
                    <label asp-for="Seats" class="form-label fw-bold"></label>
                    <input asp-for="Seats" class="form-control" />
                    <span asp-validation-for="Seats" class="text-danger"></span>
                </div>

                <!-- Daily Rate -->
                <div class="col-md-6">
                    <label asp-for="DailyRate" class="form-label fw-bold"></label>
                    <input asp-for="DailyRate" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="DailyRate" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="col-12">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Status -->
                <div class="col-md-6">
                    <label asp-for="Status" class="form-label fw-bold"></label>
                    <select asp-for="Status" class="form-select">
                        <option value="">-- Select Status --</option>
                        <option>Available</option>
                        <option>Unavailable</option>
                        <option>Maintenance</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <!-- Category -->
                <div class="col-md-6">
                    <label asp-for="Category" class="form-label fw-bold"></label>
                    <select asp-for="Category" class="form-select">
                        <option value="">-- Select Commercial Category --</option>
                        <option>Marriage Tour</option>
                        <option>City Tour</option>
                        <option>Airport Transfer</option>
                        <option>Outstation</option>
                        <option>Business Travel</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <!-- Car Image -->
                <div class="col-md-6">
                    <label asp-for="ImageFile" class="form-label fw-bold">Car Image</label>
                    <input asp-for="ImageFile" class="form-control" type="file" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <!-- Logo Image -->
                <div class="col-md-6">
                    <label asp-for="ImageLogoFile" class="form-label fw-bold">Car Logo</label>
                    <input asp-for="ImageLogoFile" class="form-control" type="file" />
                    <span asp-validation-for="ImageLogoFile" class="text-danger"></span>
                </div>
            </div>

            <!-- Submit Buttons -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success px-4 py-2">
                    <i class="bi bi-save"></i> Save Car
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4 py-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- Select2 JS & CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            // Initialize Select2 on all select2 elements
            $('.select2').select2({
                placeholder: "Select or type",
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}

