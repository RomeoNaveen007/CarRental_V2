@model List<Pick_To_Ride.Models.Entities.Car>
@{
    Layout = "_GuestLayout";
    ViewData["Title"] = "Car Rental - Home";
}

<div class="container-fluid">
    <div class="row">

        <!-- Main Content -->
        <div class="col-lg-9 col-12">

            <!-- Hero -->
            <div class="hero-section text-white text-center d-flex align-items-center justify-content-center position-relative"
                 style="background: url('@Url.Content("~/uploads/offers/A_1.png")') no-repeat center center; background-size: cover; height: 90vh;">
                <div class="overlay position-absolute top-0 start-0 w-100 h-100" style="background: rgba(0,0,0,0.5);"></div>
                <div class="content position-relative">
                    <h1 class="fw-bold"><span id="typing-text"></span></h1>
                    <p class="lead mb-4 fw-bold">Book your Dream car anytime, anywhere with just a few clicks!</p>
                    <a asp-controller="Booking" asp-action="Catalog" class="btn btn-lg btn-primary shadow-lg me-2">View Car</a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-lg btn-outline-light shadow-lg">Register</a>
                </div>
            </div>

            <!-- Gallery -->
            @* ... keep your gallery cards here ... *@

            <!-- Features -->
            @* ... keep the flip cards here ... *@

            <!-- Stats -->
            @* ... keep the achievements counter section here ... *@

            <!-- Contact -->
            @* ... keep the contact section here ... *@

        </div>

        <!-- Sidebar -->
        <div class="col-lg-3 col-12 mt-4 mt-lg-0">
            <div class="sidebar-ads" style="position: sticky; top: 20px;">
                <div id="adCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/uploads/offers/R.jpg" class="d-block w-100 object-fit-cover rounded mb-3" alt="Ad 1" style="height:300px;">
                        </div>
                        <div class="carousel-item">
                            <img src="~/uploads/offers/A_2.jpg" class="d-block w-100 object-fit-cover rounded mb-3" alt="Ad 2" style="height:300px;">
                        </div>
                        @* ... more ads ... *@
                    </div>
                </div>

                <div class="sidesection mt-4 text-center">
                    <a href="/special-offer" target="_blank">
                        <img src="/uploads/offers/A_9.jpg" alt="Special Offer" class="img-fluid rounded">
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
